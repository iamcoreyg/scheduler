= form_for(@employee) do |f|
  - if @employee.errors.any?
    #error_explanation
      %h2
        = pluralize(@employee.errors.count, "error")
        prohibited this employee from being saved:
      %ul
        - @employee.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :position_title
    %br/
    = f.text_field :position_title
  .field
    = f.label :is_manager
    %br/
    = f.check_box :is_manager

  - @days.each do |day|
    .field
      = f.label day
      - @hours.unshift('Off')
      = f.select day, @hours.map { |value| if value == 'Off' then [ value, nil ] else [ value, value ] end }

  .actions
    = f.submit
