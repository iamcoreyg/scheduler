.container
  %p#notice= notice
  %h1 Companies
  %table.table
    %thead
      %tr
        %th Name
        %th Code
        %th Owner
        %th{:colspan => "3"}
    %tbody
      - @companies.each do |company|
        %tr
          %td= company.name
          %td= company.code
          %td= company.owner_id
          %td= link_to 'Show', company
          %td= link_to 'Edit', edit_company_path(company)
          %td= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' }
  %br/
  = link_to 'New Company', new_company_path
